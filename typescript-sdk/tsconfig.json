{
    "compilerOptions": {
        "target": "es2017",
        "module": "NodeNext",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "noUncheckedIndexedAccess": true,
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": ["**/*.ts", "vitest.config.mts", "vitest.e2e.config.mts", "eslint.config.mjs"],
    "exclude": [
        "node_modules",
        "./dist/**/*",
        "./examples/**/*",
        "./coverage/**/*",
        "./__tests__/**/*"
    ]
}
